# archivo: tareas.py

# 1. Suma de n números
def suma_numeros():
    n = int(input("¿Cuántos números deseas sumar? "))
    numeros = []
    for i in range(n):
        num = float(input(f"Ingrese el número {i+1}: "))
        numeros.append(num)
    print(f"La suma de los {n} números es: {sum(numeros)}")


# 2. Invertir un número (ejemplo 619 -> 916)
def invertir_numero():
    num = input("Ingrese un número para invertir: ")
    invertido = num[::-1]  # invierte la cadena
    print(f"El número invertido es: {invertido}")


# 3. Pedir datos del usuario
def datos_usuario():
    nombre = input("Ingrese su nombre: ")
    edad = input("Ingrese su edad: ")
    profesion = input("Ingrese su profesión: ")
    print(f"Hola {nombre}, tienes {edad} años y tu profesión es {profesion}.")


# 4. Pedir x números y mostrar solo los únicos
def numeros_unicos():
    x = int(input("¿Cuántos números deseas ingresar? "))
    numeros = []
    for i in range(x):
        num = int(input(f"Ingrese el número {i+1}: "))
        numeros.append(num)
    unicos = set(numeros)  # elimina duplicados
    print(f"Números únicos ingresados: {list(unicos)}")


# ---- MAIN ----
if __name__ == "__main__":
    print("Opciones:\n1. Sumar n números\n2. Invertir un número\n3. Datos de usuario\n4. Números únicos")
    opcion = input("Elige una opción (1-4): ")

    if opcion == "1":
        suma_numeros()
    elif opcion == "2":
        invertir_numero()
    elif opcion == "3":
        datos_usuario()
    elif opcion == "4":
        numeros_unicos()
    else:
        print("Opción no válida.")
